#include<stdio.h>
#include<conio.h>
#define max 5
int deque[max],left=-1,right=-1;
void insert_right();
void insert_left();
void delete_right();
void delete_left();
void insert_right()
{
	int val;
	printf("\nEnter the value to be added(Right):");
	scanf("%d",&val);
	if((left==0 && right==max-1)||(left==right+1))
	{
		printf("\nOverflow");
		return ;
	}
	if(left==-1)
	{
		left=0;
		right=0;
	}
	else
	{
		if(right==max-1)
			right=0;
		else
			right=right+1;
	}
	deque[right]=val;
}
void insert_left()
{
	int val;
	printf("\nEnter the value to be added(Left):");
	scanf("%d",&val);
	if((left==0 && right==max-1)||(left==right+1))
	{
		printf("\nOverflow");
		return ;
	}
	if(left==-1)
	{
		left=0;
		right=0;
	}
	else
	{
		if(left==0)
			left=max-1;
		else
			left=left-1;
	}
	deque[left]=val;
}
void delete_left()
{
	if(left==-1)
	{
		printf("\nUnderflow");
		return ;
	}
	printf("\nThe deleted value (Left) is %d",deque[left]);
	if(left==right)
	{
		left=-1;
		right=-1;
	}
	else
	{
		if(left==max-1)
			left=0;
		else
			left=left+1;
	}
}
void delete_right()
{
	if(left==-1)
	{
		printf("\nUnderflow");
		return ;
	}
	printf("\nThe deleted value (Right) is %d",deque[right]);
	if(left==right)
	{
		left=-1;
		right=-1;
	}
	else
	{
		if(right==0)
			right=max-1;
		else
			right=right-1;
	}
}
void display(int deque[])
{
	int i;
	if(left==-1)
		printf("\nQueue is empty\n");
	else
		for(i=0;i<=max-1;i++)
			printf("%d\t",deque[i]);
}
void main()
{
	clrscr();
int optn;	
do
    	{	printf("\nMain Menu\n1.Insert(Left)\n2.Insert(Right)");
    		printf("\n3.Delete(Left)\n4.Delete(Right)\n5.Display\n6.Exit");
    		printf("\nEnter your option:");
    		scanf("%d",&optn);
    		switch(optn)
    		{
      			case 1:insert_left();
			       break;
      			case 2:insert_right();
			       break;
      			case 3:delete_left();
			       break;
      			case 4:delete_right();
			       break;
      			case 5:display(deque);
			       break;
      			case 6:break;
      			default:printf("Invalid");
    		}
  	}while(optn!=6);
  	getch();
}
